<UserControl x:Class="wpf_sample.BookingForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_sample" 
             xmlns:lib="clr-namespace:wpf_sample.lib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <!-- TODO - The Form Component should be something along the lines of
  https://stackoverflow.com/questions/9094486/adding-children-to-usercontrol-->
  <StackPanel>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0" Style="{StaticResource Heading1}" Text="Create Booking"/>
      <Separator Grid.Row="1"/>

      <lib:FormSection Grid.Row="2" Label="Involved Parties">
        <TextBlock Text="Hello World"/>
      </lib:FormSection>
    </Grid>
  </StackPanel>
</UserControl>
