<UserControl x:Class="wpf_sample.lib.EditElementWrapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_sample.lib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Margin="5">
    <StackPanel Orientation="Horizontal">
      <TextBlock Name="PART_Label" Style="{StaticResource Label}"/>
      <TextBlock Name="PART_MandatoryIndicator">
        <Run Typography.Variants="Superscript">*</Run>
      </TextBlock>
      <TextBlock Name="PART_ToolTip" Text="(?)" Padding="10,0,0,0"/>
    </StackPanel>
    <StackPanel Name="PART_Host"/>
    <TextBlock Name="uxErrorMessage" Foreground="Red"/>
  </StackPanel>
</UserControl>
