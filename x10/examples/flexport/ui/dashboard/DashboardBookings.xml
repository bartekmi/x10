<DashboardBookings model="BookingsWithCount">
  <VerticalStackPanel>
    <!-- Header: Label, count, 'see all' -->
    <RepellingRow>
      <Row>
        <Heading3 text="Bookings"/>
        <Pill path="count"/>
      </Row>
      <LinkButton label="See all" url="/bookings"/>
    </RepellingRow>

    <HorizontalDivider/>

    <!-- The actual content -->
    <List path="bookings">
      <RepellingRow>
        <Icon icon="=state"/>
        <VerticalStackPanel>
          <!-- Name, etc + priority/bookmark -->
          <RepellingRow>
            <Row>
              <shipment.flexId Text.weight="bold"/>
              <Bullet/>
              <name/>
            </Row>
            <Row>
              <priority/>
              <BookmarkEditor/>
            </Row>
          </RepellingRow>

          <metadata/>

          <!-- Shipment Status/Exception type -->
          <Row>
            <Icon icon="square-with-bubble"/>
            <status/>
          </Row>

          <RepellingRow>
            <Row>
              <Icon icon="=shipment.transportationMode"/>
              <status/>
            </Row>
            <Row>
              <Text text="CRD"/>
              <cargoReadyDate Text.weight="bold"/>
            </Row>
          </RepellingRow>
        </VerticalStackPanel>
      </RepellingRow>
    </List>
  </VerticalStackPanel>
</DashboardBookings>
