<DashboardTasks model="Task" many="true">
    <VerticalStackPanel>
        <!-- Header: Label, count, 'see all' -->
        <RepellingRow>
            <Row>
                <Heading3 text="Tasks"/>
                <Pill text="$count"/>
            </Row>
            <LinkButton label="See all" url="/tasks"/>
        </RepellingRow>

        <HorizontalDivider/>

        <!-- The actual content -->
        <List>
            <RepellingRow>
                <Icon icon="=type.icon"/>
                <VerticalStackPanel>
                    <Row>
                        <shipment.flexId Text.weight="bold"/>
                        <Bullet/>
                        <shipment.name/>
                    </Row>
                    <Row>
                        <shipment.metadata/>
                    </Row>
                    <RepellingRow>
                        <Row>
                            <Icon icon="=shipment.transportationMode.icon"/>
                            <headline/>
                            <Bullet/>
                            <dueDateHuman/>
                        </Row>
                        <Row>
                            Due <dueDate Text.weight="bold"/>
                        </Row>
                    </RepellingRow>
                </VerticalStackPanel>
            </RepellingRow>
        </List>
    </VerticalStackPanel>
</DashboardTasks>
