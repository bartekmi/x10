<DashboardQuoteRequests model="QuoteRequest" many="true">
  <VerticalStackPanel>
    <!-- Header: Label, count, 'see all' -->
    <RepellingRow>
      <Row>
        <Heading3 text="Quote Requests"/>
        <Pill text="=count"/>
      </Row>
      <LinkButton label="See all" url="/quote_requests"/>
    </RepellingRow>

    <HorizontalDivider/>

    <!-- The actual content -->
    <List>
      <RepellingRow>
        <Icon icon="=state"/>
        <VerticalStackPanel>
          <!-- Name, etc + priority/bookmark -->
          <RepellingRow>
            <Row>
              <shipment.flexId weight="bold"/>
              <Bullet/>
              <shipment.name/>
            </Row>
            <BookmarkEditor/>
          </RepellingRow>

          <shipment.metadata/>

          <RepellingRow>
            <Row>
              <Icon icon="=shipment.transportationMode"/>
              <state/>
            </Row>
            <Row>
              CRD <cargoReadyDate weight="bold"/>
            </Row>
          </RepellingRow>
        </VerticalStackPanel>
      </RepellingRow>
    </List>
  </VerticalStackPanel>
</DashboardQuoteRequests>
