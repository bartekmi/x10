<Exceptions model="[Exception]">
    <VerticalStackPanel>
        <!-- Header: Label, count, 'see all' -->
        <RepellingRow>
            <Row>
                <Heading3 text="Exceptions"/>
                <Pill text="=count"/>
            </Row>
            <LinkButton text="See all" url="/shipments?has_exception=true"/>
        </RepellingRow>

        <HorizontalDivider/>

        <!-- The actual content -->
        <List>
            <StretchingRow>
                <Icon icon="=type"/>
                <VerticalStackPanel>
                    <!-- Name, etc + priority/bookmark -->
                    <RepellingRow>
                        <Row>
                            <flexId weight="bold"/>
                            <Bullet/>
                            <shipment.name/>
                        </Row>
                        <Row>
                            <priority/>
                            <BookmarkEditor/>
                        </Row>
                    </RepellingRow>

                    <shipment.metadata/>

                    <!-- Shipment Status/Exception type -->
                    <Row>
                        <Icon icon"square_with_bubble"/>
                        <shipment.status/>
                        <Bullet/>
                        <type/>
                    </Row>

                    <RepellingRow>
                        <Row>
                            <Icon icon="=shipment.transportationMode"/>
                            <shipment.currentLocation.location.name/>
                            <Bullet/>
                            <type/>
                        </Row>
                        <Row>
                            <timestampHuman>
                            </Row>
                        </RepellingRow>
                    </VerticalStackPanel>
                </StretchingRow>
            </List>
        </VerticalStackPanel>
    </Tasks>
