<DashboardExceptions model="Exception" many="true">
  <VerticalStackPanel>
    <!-- Header: Label, count, 'see all' -->
    <RepellingRow>
      <Row>
        <Heading3 text="Exceptions"/>
        <Pill text="=count"/>
      </Row>
      <LinkButton label="See all" url="/shipments?has_exception=true"/>
    </RepellingRow>

    <HorizontalDivider/>

    <!-- The actual content -->
    <List>
      <RepellingRow>
        <Icon icon="=type"/>
        <VerticalStackPanel>
          <!-- Name, etc + priority/bookmark -->
          <RepellingRow>
            <Row>
              <shipment.flexId Text.weight="bold"/>
              <Bullet/>
              <shipment.name/>
            </Row>
            <Row>
              <shipment.priority/>
              <BookmarkEditor/>
            </Row>
          </RepellingRow>

          <shipment.metadata/>

          <!-- Shipment Status/Exception type -->
          <Row>
            <Icon icon="=shipment.transportationMode"/>
            <shipment.status/>
            <Bullet/>
            <type/>
          </Row>

          <RepellingRow>
            <Row>
              <Icon icon="=shipment.transportationMode"/>
              <shipment.currentLocation.location.name/>
              <Bullet/>
              <type/>
            </Row>
            <Row>
              <timestampHuman/>
            </Row>
          </RepellingRow>
        </VerticalStackPanel>
      </RepellingRow>
    </List>
  </VerticalStackPanel>
</DashboardExceptions>
