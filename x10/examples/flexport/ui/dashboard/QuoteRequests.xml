<QuoteRequests model="[QuoteRequest]">
    <VerticalStackPanel>
        <!-- Header: Label, count, 'see all' -->
        <RepellingRow>
            <Row>
                <Heading3 text="Quote Requests"/>
                <Pill text="=count"/>
            </Row>
            <LinkButton text="See all" url="/quote_requests"/>
        </RepellingRow>

        <HorizontalDivider/>

        <!-- The actual content -->
        <List>
            <StretchingRow>
                <Icon icon="=state"/>
                <VerticalStackPanel>
                    <!-- Name, etc + priority/bookmark -->
                    <RepellingRow>
                        <Row>
                            <flexId weight="bold"/>
                            <Bullet/>
                            <shipment.name/>
                        </Row>
                        <Row>
                            <priority/>
                            <BookmarkEditor/>
                        </Row>
                    </RepellingRow>

                    <shipment.metadata/>

                    <!-- Shipment Status/Exception type -->
                    <Row>
                        <Icon icon="square_with_bubble"/>
                        <shipment.status/>
                        <Bullet/>
                        <type/>
                    </Row>

                    <RepellingRow>
                        <Row>
                            <Icon icon="=shipment.transportationMode"/>
                            <state/>
                        </Row>
                        <Row>
                            CRD <cargoReadyDate weight="bold"/>
                        </Row>
                    </RepellingRow>
                </VerticalStackPanel>
            </StretchingRow>
        </List>
    </VerticalStackPanel>
</QuoteRequests>
