<Dashboard url="/dashboard">
  <VerticalStackPanel>
    <!-- Dashboard Header Row -->
    <RepellingRow>
      <Row>
        <Heading1 path="/currentUser" text="Hello, ${firstName}!"/>
        <Filters/>
      </Row>
      <Row>
        <HollowButton label="Get a quote" url="/quote_requests/new"/>
        <Button label="Book a shipment" url="/bookings/new"/>
      </Row>
    </RepellingRow>

    <HorizontalDivider/>

    <!-- Dashboard Content -->
    <PackingLayout>
      <Map/>
      <DashboardTasks/>
      <PriorityAndBookmarkedShipments/>
      <!-- <PriorityAndBookmarkedShipments path="/Shipments(priority: high, hasBookmark: true)"/> -->
      <DashboardExceptions/>
      <Calendar/>
      <DashboardBookings/>
      <DashboardQuoteRequests/>
    </PackingLayout>
  </VerticalStackPanel>
</Dashboard>
