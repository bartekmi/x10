<Order model="[PurchaseOrders]" url="/orders">
    <VerticalStackPanel>
        <Heading1 text="Purchase Orders"/>
        <Divider/>

        <Table>
            <!-- Header -->
            <Table.Header>
                <RepellingRow>
                    <Row>
                        <Button label="Upload CSV">
                            <Button.Action>
                                <UploadAction label="Upload Orders by CSV" fileFilter="*.csv" backEndTarget="/purchase_order_upload"/>
                            </Button.Action>
                        </Button>
                        <Button label="Upload CSV">
                            <Button.Action>
                                <BackEndAction confirmDialogTitle="Purchase Orders Dwonload" confirmDialogText="We'll send you an email with your purchase orders shortly."/>
                            </Button.Action>
                        </Button>

                        <Filters>
                            <MABD/>
                            <cargoReadyDate/>
                            <otherParty/>
                        </Filters>

                        <FilterMultiSelect label="Progress" path="progress"/>
                        <FilterMultiSelect label="Statuses" path="state"/>
                    </Row>
                    <TablePageControls/>
                </RepellingRow>
            </Table.Header>

            <!-- Columns -->
            <Table.Columns>
                <purchaseOrderNumber/>
                <cargoReadyBy/>
                <mustArriveBy/>
                <buyer/>
                <seller/>
                <TableColumn>
                    <Text text="=`${shippedItemCount}/${totalItemCount} lines booked`"/>
                </TableColumn>
                <state editable="true"/>
            </Table.Columns>

        </Table>
    </VerticalStackPanel>
</Order>
