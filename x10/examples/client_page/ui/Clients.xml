<Clients model="Client" many="true" url="/clients">
  <VerticalStackPanel>
    <Heading1 text="Clients"/>

    <Table>
      <Table.Columns>
        <company.primaryEntity.legalName/>
        <status/>
        <segment/>
        <primaryShipmentRole/>
