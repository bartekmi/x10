<CompanyEntityForm model="CompanyEntity" url="/companyEntities">
  <Form>
    <legalName/>
    <doingBusinessAs/>
    <companyType/>
    <countryOfBusinessRegistration/>
    <stateOfBusinessRegistration/>
    <usTaxId/>

    <TabbedPane>
      <Tab label="Address">
        <VerticalStackPanel>
          <VerticalStackPanel path="mailingAddress">
            <Text>Mailing Address</Text>
            <HorizontalDivider/>
            <theAddress/>
            <theAddress2/>
            <Row>
              <country label="Country/Region"/>
              <stateOrProvince/>
            </Row>
            <Row>
              <city label="City/Town"/>
              <postalCode/>
            </Row>
          </VerticalStackPanel>
          <Checkbox path="mailingAddressIsPhysicalAddress" checkboxLabel="Mailing Address is Physical Address"/> 
          <VerticalStackPanel path="physicalAddress">
            <Text>Physical Address</Text>
            <HorizontalDivider/>
            <theAddress/>
            <theAddress2/>
            <Row>
              <country label="Country/Region"/>
              <stateOrProvince/>
            </Row>
            <Row>
              <city label="City/Town"/>
              <postalCode/>
            </Row>
          </VerticalStackPanel>
        </VerticalStackPanel>
      </Tab>
      <Tab label="Tax Information">
        <VerticalStackPanel>
          <usFccNumber/>
          <eoriNumber/>
          <usciNumber/>
        </VerticalStackPanel>
      </Tab>
      <Tab label="Identifiers">
        <VerticalStackPanel>
          <agentIataCode/>
          <hkRaNumber/>
        </VerticalStackPanel>
      </Tab>
      <Tab label="Compliance">
        <VerticalStackPanel>
          <Text>Wants to use Flexport Service:</Text>
        </VerticalStackPanel>
      </Tab>
      <Tab label="Billing">
        <VerticalStackPanel>
          <vendorCategory/>
        </VerticalStackPanel>
      </Tab>
    </TabbedPane>

    <HorizontalDivider/>
    <RepellingRow>
      <FormErrorDisplay/>
      <SubmitButton label="Save"/>
    </RepellingRow>
  </Form>
</CompanyEntityForm>