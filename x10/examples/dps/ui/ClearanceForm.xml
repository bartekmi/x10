<ClearanceForm model="Hit">
  <Form>
    <Row gap="100">
      <Text>Is this a denid party?</Text>
      <RadioButtonGroup path="status" excludeItems="unresolved"/>
    </Row>
    <Row visible="=status == 'denied'" borderColor="red" marginBottom="10" marginTop="10" 
        padding="10" width="800" borderWidth="1.5">
      <Icon icon="attention"/>
      <Text>Shipments related to this entity will remain blocked</Text>
    </Row>
    <Row visible="=status != 'denied'" gap="32">
      <reasonForClearance/>
      <whitelistTime label="Whitelist time"/>
    </Row>
    <notes maxWidth="800"/>
    <SubmitButton label="=status != 'denied' ? 'Clear the hit' : 'Confirm'" marginTop="30">
      <SubmitButton.Action>
        <Action backEndTarget="/tenants/create" successUrl="/tenants"/>
      </SubmitButton.Action>
    </SubmitButton>
  </Form>
</ClearanceForm>
