<ClearanceForm model="Hit">
  <Form>
    <Row gap="100" align="top">
      <Text>Is this a denied party?</Text>
      <status excludeItems="unresolved" ui="RadioButtonGroup" label=""/>
    </Row>
    <Row visible="=status == 'denied'" borderColor="red" padding="10" width="800" borderWidth="1.5">
      <Icon icon="attention" color="red"/>
      <Text>Shipments related to this entity will remain blocked</Text>
    </Row>
    <Row visible="=status != 'denied'" gap="32" align="top">
      <reasonForClearance/>
      <whitelistDays label="Whitelist time"/>
    </Row>
    <notes maxWidth="800"/>
    <SubmitButton label="=status != 'denied' ? 'Clear the hit' : 'Confirm'" marginTop="30"
      successMessage="Hit updated successfully."
      errorMessage="There was a problem. Hit not saved."
    />
  </Form>
</ClearanceForm>
