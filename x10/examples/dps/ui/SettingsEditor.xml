<SettingsEditor model="Settings" url="/settings">
  <Form>
    <!-- Hit urgency -->
    <Expander>
      <Expander.Header>
        <Heading3 text="Hit urgency"/>
      </Expander.Header>
      <Expander.Body>
        <VerticalStackPanel>
          <!-- High Urgency -->
          <Row>
            <Text weight="bold">High urgency</Text>
            <Icon icon="dot" color="red"/>
          </Row>
          <Text>The hit is of high urgency if ANY of these conditiona are met.</Text>
          <Row gap="20">
            <highUrgencyShipments label="Shipments" width="80" prefix="≥"/>
            <highUrgencyQuotes label="Quotes" width="80" prefix="≥"/>
            <highUrgencyBookings label="Bookings" width="80" prefix="≥"/>
            <highUrgencyDaysBeforeShipment label="Days before shipment" width="80" prefix="≤"/>
            <highUrgencyEscalated label="Escalated by Operations" marginLeft="80"/>
          </Row>

          <!-- Medium urgency -->
          <HorizontalDivider/>

          <Row>
            <Text weight="bold">Medium urgency</Text>
            <Icon icon="dot" color="orange"/>
          </Row>
          <Text>The hit is of medium urgency if ANY of these conditions are met (excluding hits classified as high urgency)</Text>
          <Row gap="20">
            <mediumUrgencyShipments label="Shipments" width="80" prefix="≥"/>
            <mediumUrgencyQuotes label="Quotes" width="80" prefix="≥"/>
            <mediumUrgencyBookings label="Bookings" width="80" prefix="≥"/>
            <mediumUrgencyDaysBeforeShipment label="Days before shipment" width="80" prefix="≤"/>
          </Row>

          <!-- Low urgency -->
          <HorizontalDivider/>

          <Row>
            <Text weight="bold">Low urgency</Text>
            <Icon icon="dot" color="yellow"/>
          </Row>
          <Text>The hit is of low urgency if it’s not classified as either high or medium</Text>
        </VerticalStackPanel>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>
    
    <!-- Whitelisting -->
    <Expander>
      <Expander.Header>
        <Heading3 text="Whitelisting"/>
      </Expander.Header>
      <Expander.Body>
        <Row align="top" gap="100">
          <List path="whitelistDurations" layout="verticalCompact">
            <Row gap="20">
              <value width="80"/>
              <label/>
            </Row>
          </List>
          <defaultWhitelistDurationDays ui="DropDown" label="Default whitelisting days" itemsSource="whitelistDurations"/>
        </Row>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>
    
    <!-- Automated Internal Message -->
    <Expander>
      <Expander.Header>
        <Heading3 text="Automated internal messages"/>
      </Expander.Header>
      <Expander.Body>
        <VerticalStackPanel>
          <messageHitDetected/>
          <messageHitCleared/>
        </VerticalStackPanel>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>
    
    <!-- Auto assignment -->
    <Expander>
      <Expander.Header>
        <Heading3 text="Auto assignment"/>
      </Expander.Header>
      <Expander.Body>
        <VerticalStackPanel>
          <Text>The time configuration is based on UTC+0 time zone (Pacific time is UTC-7)</Text>
          <List path="autoAssignments" layout="verticalCompact">
            <Row>
              <from/>
              <to/>
              <user/>
            </Row>
          </List>
        </VerticalStackPanel>
      </Expander.Body>
    </Expander>

    <SubmitButton label="Save Settings" marginTop="30"
      successMessage="Settings updated successfully."
      errorMessage="There was a problem. Settings not saved."
    />
  </Form>
</SettingsEditor>
