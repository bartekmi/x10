<HitDetailsTab model="Hit">
  <VerticalStackPanel>
    <Heading1 text="Match details"/>
    <Heading2 text="='Please review ' + matches.count + ' matches'"/>
    <Row>
      <VerticalStackPanel>
        <Heading3 text="Company information"/>
        <companyEntity.name/>
        <companyEntity.primaryContact/>
        <companyEntity.mainNumber/>
        <companyEntity.address/>
      </VerticalStackPanel>
      <VerticalDivider/>
      <List path="matches">
        <VerticalStackPanel>
          <Heading3 text="Source information"/>
          <score/>
          <sourceList/>
          <ids/>
          <name/>
          <address/>
          <type/>
          <title/>
          <programs/>
        </VerticalStackPanel>
      </List>
    </Row>
    <HorizontalDivider/>
    <Heading1 text="Suggested resources"/>
    <HorizontalDivider/>
    <Heading1 text="Clearance"/>
  </VerticalStackPanel>
</HitDetailsTab>
