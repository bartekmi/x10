<HitDetailsTab model="Hit">
  <VerticalStackPanel>
    <Heading2 text="Match details"/>
    <Row>
      <Icon icon="attention"/>
      <Heading3 text="='Please review ' + matches.count + ' matches'"/>
    </Row>

    <DisplayForm>
      <Heading3 text="Company information"/>
      <Row gap="52">
        <companyEntity.name borderColor="=HasNameMatches(matches) ? '#FFA07A' : null"/>
        <companyEntity.physicalAddress.address borderColor="=HasAddressMatches(matches) ? '#FFD700' : null"/>
      </Row>
    </DisplayForm>

    <HorizontalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Match information"/>
      </Expander.Header>
      <Expander.Body>
        <Table path="matches">
          <Table.ExpandedContent>
            <VerticalStackPanel>
              <Text weight="bold">Match details</Text>
              <DisplayForm>
                <reasonListed/>
                <HorizontalDivider/>
                <comments/>
              </DisplayForm>
              <HorizontalDivider/>
              <Text>Related resource</Text>
              <List path="sources" layout="wrap">
                <Embed url="=url"/>
              </List>

            </VerticalStackPanel>
          </Table.ExpandedContent>

          <number/>
          <score/>
          <name fillColor="=isNameMatch ? '#FFA07A' : null"/>
          <address fillColor="=isAddressMatch ? '#FFD700' : null"/>
          <matchType label="Type"/>
        </Table>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Clearance"/>
      </Expander.Header>
      <Expander.Body>
        <ClearanceForm/>
      </Expander.Body>
    </Expander>

  </VerticalStackPanel>
</HitDetailsTab>
