<HitDetailsTab model="Hit">
  <VerticalStackPanel>
    <Heading1 text="Match details"/>
    <Heading2 text="='Please review ' + matches.count + ' matches'"/>
    <Row>
      <VerticalStackPanel>
        <Heading3 text="Company information"/>
        <companyEntity.name/>
        <companyEntity.primaryContact/>
        <companyEntity.mainNumber/>
        <companyEntity.address/>
      </VerticalStackPanel>
      <VerticalDivider/>
      <List path="matches">
        <VerticalStackPanel>
          <Heading3 text="Match details"/>
          <Row>
            <name/>
            <address/>
            <matchType/>
          </Row>
          <reasonListed/>
          <comments/>
          <recordSource/>
        </VerticalStackPanel>
      </List>
    </Row>

    <HorizontalDivider/>

    <Heading1 text="Suggested resources"/>
    <List path="resources">
      <VerticalStackPanel>
        <title/>
        <text/>
        <text>HELPFUL? (TBD)</text>
      </VerticalStackPanel>
    </List>

    <HorizontalDivider/>

    <ClearanceForm/>

  </VerticalStackPanel>
</HitDetailsTab>
