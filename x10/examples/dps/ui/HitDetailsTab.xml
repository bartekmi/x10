<HitDetailsTab model="Hit">
  <VerticalStackPanel>
    <Heading2 text="Match details"/>
    <Row>
      <Icon icon="attention"/>
      <Heading3 text="='Please review ' + matches.count + ' matches'"/>
    </Row>

    <DisplayForm>
      <Heading3 text="Company information"/>
      <Row>
        <companyEntity.name/>
        <companyEntity.physicalAddress.address/>
      </Row>
    </DisplayForm>

    <VerticalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Match information"/>
      </Expander.Header>
      <Expander.Body>
        <List path="matches">
          <DisplayForm>
            <Heading3 text="Match details"/>
            <Row>
              <name/>
              <address/>
              <matchType/>
            </Row>
            <reasonListed/>
            <comments/>
            <recordSource/>
          </DisplayForm>
        </List>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Clearance"/>
      </Expander.Header>
      <Expander.Body>
        <ClearanceForm/>
      </Expander.Body>
    </Expander>

  </VerticalStackPanel>
</HitDetailsTab>
