<WorkspaceTabs model="Hit" url="/hits" query="GetHit(hitId: $hitId">
  <TabbedPane>
    <Tab label="Hit details">
      <HitDetailsTab/>
    </Tab>
    <Tab label="='Shipment ' + shipments.count">
      <ShipmentTab path="shipments"/>
    </Tab>
    <Tab label="='Escalation ' + messages.count">
      <EscalationTab path="messages"/>
    </Tab>
  </TabbedPane>
</WorkspaceTabs>
