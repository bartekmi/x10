<SlideoutPanel model="Hit" url="/hits/panel" query="GetHit(hitId: $hitId">
  <VerticalStackPanel>
    <VerticalStackPanel path="companyEntity">
      <Heading1 text="Overview"/>
      <primaryContact/>
      <primaryContactEmail/>
      <mainNumber/>
      <segment/>
      <!-- TODO: Link -->
      <website/>
      <address/>
    </VerticalStackPanel>

    <HorizontalDivider/>

    <Heading1 text="Compliance status"/>
    <RepellingRow>
      <Text weight="bold">Denied party screening</Text>
      <Text>Detected as a hit, waiting for review</Text>
    </RepellingRow>

    <Heading1 text="Denied party screening records"/>
    <List path="oldHits">
      <VerticalStackPanel>
        <Label label="Screened as a hit">
          <createdAt/>
        </Label>
        <Label label="=status == 'denied' ? 'Denied time' : 'Clearance time'">
          <resolutionTimestamp/>
        </Label>
        <Label label="=status == 'denied' ? 'Denied by' : 'Cleared by'">
          <resolvedBy.name/>
        </Label>
        <Label label="Reason for clearance" visible="=status != 'denied'">
          <reasonForClearance/>
        </Label>
        <Label label="Notes">
          <notes/>
        </Label>

        <List path="attachments" visible="=attachments.count > 0">
          <Button label="=filename" url="=url"/>
        </List>
      </VerticalStackPanel>
    </List>

  </VerticalStackPanel>
</SlideoutPanel>
