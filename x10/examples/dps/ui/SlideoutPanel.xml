<SlideoutPanel model="Hit" url="/hits/panel" query="GetHit(hitId: $hitId">
  <VerticalStackPanel>
    <Expander>
      <Expander.Header>
        <Heading3 text="Overview"/>
      </Expander.Header>
      <Expander.Body>
        <DisplayForm path="companyEntity">
          <primaryContact/>
          <primaryContactEmail/>
          <mainNumber/>
          <segment/>
          <!-- TODO: Link -->
          <Label label="Website">
            <Button label="=website" url="=website"/>
          </Label>
          <physicalAddress.address/>
        </DisplayForm>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Compliance status"/>
      </Expander.Header>
      <Expander.Body>
        <RepellingRow>
          <Row>
            <Icon icon="attention"/>
            <Text weight="bold">Denied party screening</Text>
          </Row>
          <Text>Detected as a hit, waiting for review</Text>
        </RepellingRow>
      </Expander.Body>
    </Expander>

    <HorizontalDivider/>

    <Expander>
      <Expander.Header>
        <Heading3 text="Denied party screening records"/>
      </Expander.Header>
      <Expander.Body>
        <List path="oldHits">
          <DisplayForm>
            <createdAt label="Screened as a hit"/>
            <resolutionTimestamp  label="=status == 'denied' ? 'Denied time' : 'Clearance time'"/>
            <resolvedBy.name  label="=status == 'denied' ? 'Denied by' : 'Cleared by'"/>
            <reasonForClearance label="Reason for clearance" visible="=status != 'denied'"/>
            <notes/>

            <List path="attachments" visible="=attachments.count > 0">
              <Button label="=filename" url="=url"/>
            </List>
          </DisplayForm>
        </List>
      </Expander.Body>
    </Expander>

  </VerticalStackPanel>
</SlideoutPanel>
