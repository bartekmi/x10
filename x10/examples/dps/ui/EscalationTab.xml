<EscalationTab model="Hit">
  <VerticalStackPanel gap="20">
    <Row>
      <Icon icon="attention"/>
      <Text text="Ops sent these messages when they escalated this hit"/>
    </Row>

    <List path="messages">
      <VerticalStackPanel gap="4">
        <Row gap="20">
          <Dialog path="user" title="=user.name">
            <Dialog.OpenButton>
              <Button label="=name"/>
            </Dialog.OpenButton>
            <VerticalStackPanel width="350">
              <DisplayForm>
                <phone/>
                <email/>
                <location/>
              </DisplayForm>
            </VerticalStackPanel>
          </Dialog>
          <timestamp/>
        </Row>
        <text/>

        <Button label="=flexId" url="=shipmentUrl"/>
      </VerticalStackPanel>
    </List>
  </VerticalStackPanel>
</EscalationTab>
