<EscalationTab model="Hit">
  <VerticalStackPanel>
    <Row>
      <Icon icon="attention"/>
      <Text text="Ops sent these messages when they escalated this hit"/>
    </Row>

    <List path="messages">
      <VerticalStackPanel>
        <Row>
          <user.name/>
          <timestamp/>
        </Row>
        <text/>

        <!-- TODO: Make flexId, Consignee, Shipper int hyperlinks -->
        <flexId/>
      </VerticalStackPanel>
    </List>
  </VerticalStackPanel>
</EscalationTab>
