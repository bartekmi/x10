<ShipmentTab model="Hit">
  <VerticalStackPanel>
    <Heading3 text="Shipments"/>

    <Table path="shipments">
      <!-- TODO: Make flexId, Consignee, Shipper int hyperlinks -->
      <TableColumn label="Id">
        <Button label="=flexId" url="=url"/>
      </TableColumn>
      <name/>
      <TableColumn label="Consignee" path="consignee">
        <Button label="=name" url="=url"/>
      </TableColumn>
      <TableColumn label="Shipper" path="shipper">
        <Button label="=name" url="=url"/>
      </TableColumn>

      <TableColumn label="Mode">
        <transportationMode fillColor="black" />
      </TableColumn>

      <TableColumn label="Mode">
        <status fillColor="black" />
      </TableColumn>

      <TableColumn label="Mode">
        <customs fillColor="red"/>
      </TableColumn>

      <cargoReadyDate/>

      <TableColumn label="Departs">
        <VerticalStackPanel>
          <actualDepartureDate/>
          <departurePort.cityAndCountry/>
        </VerticalStackPanel>
      </TableColumn>

      <TableColumn label="Arrives">
        <VerticalStackPanel>
          <arrivalDate/>
          <arrivalPort.cityAndCountry/>
        </VerticalStackPanel>
      </TableColumn>

      <TableColumn label="Due Date">
        <VerticalStackPanel>
          <dueDateTask/>
          <dueDate weight="bold"/>
        </VerticalStackPanel>
      </TableColumn>

    </Table>
  </VerticalStackPanel>
</ShipmentTab>
