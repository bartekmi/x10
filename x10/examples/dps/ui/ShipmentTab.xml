<ShipmentTab model="Hit">
  <VerticalStackPanel>
    <Heading3 text="Shipments"/>

    <Table path="shipments">
      <!-- TODO: Make flexId, Consignee, Shipper int hyperlinks -->
      <TableColumn>
        <Button label="=flexId" url="=url"/>
      </TableColumn>
      <name/>
      <consignee.name/>
      <shipper.name/>
      <transportationMode/>
      <status/>
      <customs/>
      <cargoReady/>
      <departsDate/>
      <arrivesDate/>
      <TableColumn>
        <VerticalStackPanel>
          <dueDateTask/>
          <dueDate weight="bold"/>
        </VerticalStackPanel>
      </TableColumn>
    </Table>
  </VerticalStackPanel>
</ShipmentTab>
