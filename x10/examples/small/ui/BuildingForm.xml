<BuildingForm model="Building" url="/building">
  <Form>
    <FormSection label="Building Info">
      <id/>
      <name/>
      <description/>
    </FormSection>

    <FormSection path="physicalAddress" label="Physical Address">
      <address/>
      <city/>
      <zip label="Zip or Postal Code"/>
    </FormSection>

    <FormSection label="Other Details">
      <Row>
        <dateOfOccupancy/>
        <ageInYears/>
      </Row>
      <mailboxType/>
      <petPolicy/>
    </FormSection>

    <RepellingRow>
      <Text>* Required</Text>
      <Row>
        <FormButton label="Save" validate="true">
          <FormButton.Action>
            <Action backEndTarget="/buildings/save" successUrl="/buildings"/>
          </FormButton.Action>
        </FormButton>
      </Row>
    </RepellingRow>
  </Form>
</BuildingForm>
