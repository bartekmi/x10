<BuildingForm model="Building" url="/building">
  <Form>
    <FormSection label="Building Info">
      <moniker/>
      <name/>
      <description/>
    </FormSection>

    <FormSection path="physicalAddress" label="Physical Address">
      <address/>
      <city/>
      <stateOrProvince/>
      <zip/>
    </FormSection>

    <FormSection label="Mailing Address">
      <mailingAddressSameAsPhysical/>
      <VerticalStackPanel path="mailingAddress" visible="=!mailingAddressSameAsPhysical">
        <address label="Address or Post Office (PO) Box"/>
        <city/>
        <stateOrProvince/>
        <zip/>
      </VerticalStackPanel>
    </FormSection>

    <FormSection label="Other Details">
      <Row>
        <dateOfOccupancy/>
        <ageInYears/>
      </Row>
      <mailboxType/>
      <petPolicy/>
    </FormSection>

    <RepellingRow>
      <Text>* Required</Text>
      <Row>
        <FormButton label="Save" validate="true">
          <FormButton.Action>
            <Action backEndTarget="/buildings/save" successUrl="/buildings"/>
          </FormButton.Action>
        </FormButton>
      </Row>
    </RepellingRow>
  </Form>
</BuildingForm>
