<BuildingForm model="Building" url="/building/{$buildingId}" query="GetBuilding(buildingId: $buildingId">
  <Form>
    <FormSection label="Building Info">
      <moniker/>
      <name/>
      <description/>
    </FormSection>

    <FormSection path="physicalAddress" label="Physical Address">
      <address/>
      <city/>
      <stateOrProvince/>
      <zip/>
    </FormSection>

    <FormSection label="Mailing Address">
      <mailingAddressSameAsPhysical/>
      <VerticalStackPanel path="mailingAddress">
        <address label="Address or Post Office (PO) Box"/>
        <city/>
        <stateOrProvince/>
        <zip/>
      </VerticalStackPanel>
    </FormSection>

    <FormSection label="Other Details">
      <Row>
        <dateOfOccupancy/>
        <ageInYears/>
      </Row>
      <mailboxType/>
      <petPolicy/>
    </FormSection>

    <RepellingRow>
      <Text>* Required</Text>
      <Row>
        <SubmitButton label="Save">
          <SubmitButton.Action>
            <Action backEndTarget="/buildings/create" successUrl="/buildings"/>
          </SubmitButton.Action>
        </SubmitButton>
      </Row>
    </RepellingRow>
  </Form>
</BuildingForm>
