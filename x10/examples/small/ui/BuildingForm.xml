<Dashboard url="/building">
  <Form>
    <VerticalStackPanel>
      <FormSection label="Building Info">
        <name/>
        <description/>
        <dateOfOccupancy/>
      </FormSection>
      <FormSection path="physicalAddress" label="Physical Address">
        <address/>
        <city/>
        <zip label="Zip or Postal Code"/>
      </FormSection>
    </VerticalStackPanel>
    <FormSection label="Other Details">
      <dateOfOccupancy/>
      <mailboxType/>
    </FormSection>
    
    <RepellingRow>
      <Text>* Required</Text>
      <Row>
        <FormButton label="Save" validate="true">
          <FormButton.Action>
            <Action backEndTarget="/buildings/save" successUrl="/buildings"/>
          </FormButton.Action>
        </FormButton>
      </Row>
    </RepellingRow>
  </Form>
</Dashboard>
