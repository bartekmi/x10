<Buildings model="Building" many="true" url="/buildings" query="Buildings">
  <VerticalStackPanel>
    <Heading1 text="Buildings"/>

    <Table>
      <!-- Header -->
      <Table.Header>
          <Row>
            <!-- TODO: Filters -->
          </Row>
      </Table.Header>

      <!-- Columns -->
      <Table.Columns>
        <TableColumn label="Name" width="200">
          <Row>
            <name/>
            <HelpIcon visible="=!IsBlank(description)" text="=description"/>
          </Row>
        </TableColumn>
        <physicalAddress.theAddress/>
        <physicalAddress.secondAddressLine label="City / Province"/>
        <ageInYears/>
        <petPolicy/>
        <TableColumn label="Action">
          <Row>
            <!-- TODO: 
            1) id should be lower case and validated against model 
            2) edit vs. view - need to solve problem of hierarchical properties and optional url args -->
            <Button label="View" /> <!-- url is TODO -->
            <Button label="Edit" url="='/buildings/edit/' + dbid"/>
          </Row>
        </TableColumn>
      </Table.Columns>
    </Table>
  </VerticalStackPanel>
</Buildings>
