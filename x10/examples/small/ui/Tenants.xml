<Tenants model="Tenant" many="true" url="/tenants" query="Tenants">
  <VerticalStackPanel>
    <Heading1 text="Tenants"/>

    <Table>
      <!-- Header -->
      <Table.Header>
          <Row>
            <!-- TODO: Filters -->
          </Row>
      </Table.Header>

      <!-- Columns -->
      <Table.Columns>
        <name/>
        <phone/>
        <email/>
        <permanentMailingAddress.country/>
        <TableColumn label="Action">
          <Row>
            <Button label="View" style="link" url="='/tenants/view/' + id"/>
            <Button label="Edit" style="normal" url="='/tenants/edit/' + id"/>
          </Row>
        </TableColumn>
      </Table.Columns>
    </Table>
  </VerticalStackPanel>
</Tenants>
