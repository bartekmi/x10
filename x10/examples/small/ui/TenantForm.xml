<TenantForm model="Tenant" url="/tenants" query="GetTenant(tenantId: $tenantId">
  <Form>
    <Heading1 text='=isEditing() ? "New Tenant" : "Editing Tenant" + name'/>
    <HorizontalDivider/>
    <FormSection label="Tenant Info">
      <name/>
      <phone/>
      <email/>
    </FormSection>

    <FormSection path="permanentMailingAddress" label="Permanent Mailing Address">
      <theAddress/>
      <city/>
      <stateOrProvince/>
      <zip/>
    </FormSection>

    <RepellingRow>
      <Text>* Required</Text>
      <SubmitButton label="Save">
        <SubmitButton.Action>
          <Action backEndTarget="/tenants/create" successUrl="/tenants"/>
        </SubmitButton.Action>
      </SubmitButton>
    </RepellingRow>
  </Form>
</TenantForm>
